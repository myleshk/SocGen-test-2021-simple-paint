{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2015",
    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
